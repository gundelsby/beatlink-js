{
	"extends": ["eslint:recommended", "plugin:prettier/recommended"],
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": "error"
	},
	"env": { "es2020": true },
	"parserOptions": { "sourceType": "module" },
	"overrides": [
		{
			"files": ["*-test.js"],
			"env": {
				"mocha": true,
				"node": true
			}
		}
	]
}