{
	"name": "beatlink-js",
	"version": "1.0.0",
	"description": "Code for interfacing with Pioneer Pro DJ Link devices",
	"main": "index.js",
	"engines": {
		"node": ">=17.5.0"
	},
	"type": "module",
	"repository": "github:gundelsby/beatlink-js",
	"author": "Ola Christian Gundelsby <lug00ber@gmail.com>",
	"license": "MIT",
	"scripts": {
		"test": "mocha \"./{,!(node_modules)/**}/*-test.js\"",
		"test:watch": "npm run test -- --watch --reporter min",
		"start": "node .",
		"dev": "cross-env DEBUG=beatlink* node .",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prepare": "husky install"
	},
	"devDependencies": {
		"chai": "^4.3.6",
		"cross-env": "^7.0.3",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-mocha": "^10.0.3",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.0",
		"lint-staged": "^12.3.4",
		"mocha": "^9.2.0",
		"prettier": "^2.5.1",
		"sinon": "^13.0.1"
	},
	"lint-staged": {
		"*.{json,md}": "prettier --write",
		"*.js": "eslint --cache --cache-location \"tmp/.eslintcache\" --fix"
	},
	"dependencies": {
		"debug": "^4.3.3"
	}
}
